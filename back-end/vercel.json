{
  "version": 2,
  "builds": [
    {
      "src": "dorm-designer/package.json",
      "use": "@vercel/react" // or another appropriate builder for your frontend
    },
    {
      "src": "back-end/index.js",
      "use": "@vercel/node" // this allows your backend to run as a serverless function
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/back-end/$1" // Directs API requests to your backend
    },
    {
      "src": "/(.*)",
      "dest": "/dorm-designer/$1" // Directs other requests to your frontend
    }
  ]
}
